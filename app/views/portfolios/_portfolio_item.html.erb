<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
  	<%= image_tag portfolio_item.thumb_image, class: 'card-img-top'  unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
      	<span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
      </p>      
    </div>
  </div>
</div>

